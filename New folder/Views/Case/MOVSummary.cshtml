@{
    var Collateral = ViewData["collaterals"] as List<Collateral>;
    var cases = ViewData["cases"] as Case;
    var motorVehicles = ViewData["motorVehicles"] as List<MotorVehicle>;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Case Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"><a href="@Url.Action("MyCases", "Case")">MOV Summary </a></li>
                    <li class="breadcrumb-item active">Case Detail</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <input  value=@cases.Id type="hidden" id="CaseId" />
                <table id="caseCollaterals" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th colspan="14" class="text-center"><h2>Commerecial Bank Of Ethiopia</h2></th>
                        </tr>

                        <tr>
                            <th colspan="4"> Applicant Name</th>
                            <th colspan="3">Applicant Address</th>
                            <th colspan="3">Date Of Evaluation</th>
                            <th colspan="4">Mechanical Equpiment Type</th>
                        </tr>
                        <tr>
                            <td colspan="4" id="ApplicantName">@cases.ApplicantName</td>
                            <td colspan="3"></td>
                            <td colspan="3"></td>
                            <td colspan="4">Motor Vechile</td>
                        </tr>
                        <tr>
                            <th colspan="14">PART II: SUMMERY OF VALUATION</th>
                        </tr>
                        <tr>
                            <th>S/No.</th>
                            <th>Mechanical Equipment Name</th>
                            <th>YoMfg</th>
                            <th>Origin</th>
                            <th>Model </th>
                            <th>Engine No.</th>
                            <th>Chassis No</th>
                            <th>Serial No.</th>
                            <th>Physical & Technical Assessment</th>
                            <th>Property Of </th>
                            <th>Replacement Cost </th>
                            <th>Depreciation Rate </th>
                            <th>Net Estimation Value </th>
                            <th>Remark </th>
                        </tr>
                    </thead>
                    

                </table>

            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("ScriptPartial/_RMMOVSummaryCasesDatatableSriptsPartial");
    }
}