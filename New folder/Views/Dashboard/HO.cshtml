@section Scripts {
    @{
        await Html.RenderPartialAsync("_HOMyCasesDatatableSriptsPartial");
    }
    <script>

        fetch('/UserManagment/GetDistrict')
            .then(response => response.json())
            .then(data => {
                var selectOption = $('<option selected disabled></option>').attr('value', '').text('All');
                $('#CenterDropdown').append(selectOption);
                data.forEach(function (district) {
                    var option = $('<option></option>').attr('value', district.Id).text(district.Name);
                    $('#CenterDropdown').append(option);

                });
            })
            .catch(error => {
                console.log('Error fetching District data:', error);
            });


        document.addEventListener("DOMContentLoaded", function () {
            fetch("/Case/GetDashboardCaseCount")
                .then(response => response.json())
                .then(data => {
                    animateCountWithCollateral("newCasesCount", 100, 750);
                    animateCountWithCollateral("pendingCasesCount", 500, 1000);
                    animateCountWithCollateral("completedCasesCount", 2000, 4500);
                    animateCount("totalCasesCount", 2500, data.TotalCollateralCount);
                })
                .catch(error => {
                    console.error("Error fetching card counts:", error);
                });

            function animateCount(elementId, targetCount) {
                const element = document.getElementById(elementId);
                const duration = 2000;
                const startCount = 1;
                const step = Math.ceil(targetCount / (duration / 20));

                let currentCount = startCount;
                const animationInterval = setInterval(() => {
                    currentCount += step;
                    if (currentCount >= targetCount) {
                        clearInterval(animationInterval);
                        currentCount = targetCount;
                    }
                    element.textContent = currentCount;
                }, 20);
            }

            function animateCountWithCollateral(elementId, caseCount, collateralCount) {
                const element = document.getElementById(elementId);
                const duration = 2000;
                const startCount = 1;
                const step = Math.ceil(caseCount / (duration / 20));

                let currentCount = startCount;
                const animationInterval = setInterval(() => {
                    currentCount += step;
                    if (currentCount >= caseCount) {
                        clearInterval(animationInterval);
                        currentCount = caseCount;
                    }
                    element.textContent = `${currentCount} (${collateralCount})`;
                }, 20);
            }
        });
    </script>
}

