@* @* Production Estimation Capacity Estimation *@ 



                <div class="row">
                    <div class="card">
                        <div class="card-header border-transparent">
                            <h3 class="card-title">Latest Case</h3>
                        </div>

                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table m-0">
                                    <thead>
                                        <tr>
                                            <th>Case No</th>
                                            <th>Creation Date</th>
                                            <th>Applicant Name</th>
                                            <th>Customer Id</th>
                                            <th>Collateral</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><a href="@Url.Action("Detail", "Case")?Id=@item.Id">@item.CaseNo</a></td>
                                                <td>@item.CreationAt</td>
                                                <td>@item.ApplicantName</td>
                                                <td>@item.CustomerId</td>
                                                <td>@item.NoOfCollateral</td>
                                                <td>
                                                    @if (item.Status == "New")
                                                    {
                                                        <span class="badge badge-success">New</span>
                                                    }
                                                    else if (item.Status == "Pending")
                                                    {
                                                        <span class="badge badge-warning">Pending</span>
                                                    }
                                                    else if (item.Status == "Complete")
                                                    {
                                                        <span class="badge badge-purple">Complete</span>
                                                    }
                                                </td>
                                            </tr>


                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                        

                    </div>
                </div>
            </div>
