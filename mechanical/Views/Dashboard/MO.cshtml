@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch("/Case/GetDashboardCaseCount")
                .then(response => response.json())
                .then(data => {
                    animateCountWithCollateral("newCasesCount", data.NewCaseCount, data.NewCollateralCount);
                    animateCountWithCollateral("pendingCasesCount", data.PendingCaseCount, data.PendingCollateralCount);
                    animateCountWithCollateral("completedCasesCount", data.CompletedCaseCount, data.CompletedCollateralCount);
                    animateCount("totalCasesCount", data.TotalCaseCount, data.TotalCollateralCount);
                })
                .catch(error => {
                    console.error("Error fetching card counts:", error);
                });

        });

        // production capacity estimation start
        document.addEventListener("DOMContentLoaded", function () {
            fetch("/PCEEvaluation/GetMyDashboardPCECaseCount")
                .then(response => response.json())
                .then(data => {

                    animateCountWithCollateral("newPCECasesCount", data.NewPCECasesCount, data.NewPCEsCount);
                    animateCountWithCollateral("evaluatedPCECasesCount", data.EvaluatedPCECasesCount + data.ReevaluatedPCECasesCount, data.EvaluatedPCEsCount + data.ReevaluatedPCEsCount);
                    animateCountWithCollateral("returnedPCECasesCount", data.ReturnedPCECasesCount, data.ReturnedPCEsCount);
                    animateCount("totalPCECasesCount", data.TotalPCECasesCount);

                })
                .catch(error => {
                    console.error("Error fetching card counts:", error);
                });
        });

        
        // production capacity estimation start
        document.addEventListener("DOMContentLoaded", function () {
            fetch("/PCEEvaluation/GetMyDashboardPCECount")
                .then(response => response.json())
                .then(data => {

                    animateCount("newPCEsCount", data.NewPCEsCount);
                    animateCount("pendingPCEsCount", data.PendingPCEsCount);
                    animateCount("evaluatedPCEsCount", data.EvaluatedPCEsCount + data.ReevaluatedPCEsCount);
                    animateCount("returnedPCEsCount", data.ReturnedPCEsCount);
                    animateCount("totalPCEsCount", data.TotalPCEsCount);

                })
                .catch(error => {
                    console.error("Error fetching card counts:", error);
                });
        });

        // Production capacity estimation case end

    
        function animateCount(elementId, targetCount) {
            const element = document.getElementById(elementId);
            const duration = 2000;
            const startCount = 1;
            const step = Math.ceil(targetCount / (duration / 20));

            let currentCount = startCount;
            const animationInterval = setInterval(() => {
                currentCount += step;
                if (currentCount >= targetCount) {
                    clearInterval(animationInterval);
                    currentCount = targetCount;
                }
                element.textContent = currentCount;
            }, 20);
        }

        function animateCountWithCollateral(elementId, caseCount, collateralCount) {
            const element = document.getElementById(elementId);
            const duration = 2000;
            const startCount = 1;
            const step = Math.ceil(caseCount / (duration / 20));

            let currentCount = startCount;
            const animationInterval = setInterval(() => {
                currentCount += step;
                if (currentCount >= caseCount) {
                    clearInterval(animationInterval);
                    currentCount = caseCount;
                }
                element.textContent = `${currentCount} (${collateralCount})`;
            }, 20);
        }



    </script>
}

