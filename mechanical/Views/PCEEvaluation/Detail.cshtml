                                    {
                                        <tr>
                                            <td>@shift.Start.ToString("hh:mm tt")</td>
                                            <td>@shift.End.ToString("hh:mm tt")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
