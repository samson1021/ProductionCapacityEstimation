        </div>      
    </div>              
</section>
 
  
@section Scripts {
    @{
        await Html.RenderPartialAsync("ScriptPartial/_ValidationScriptsPartial"); 
        await Html.RenderPartialAsync("ScriptPartial/_CommonLibrariesScriptPartial");
        await Html.RenderPartialAsync("Partial/_RejectModal", ViewData["RejectPost"]);
    } 

    <script>
        document.getElementById("evaluate-btn").addEventListener("click", function(event) {
            event.preventDefault(); 

            var rejectionForm = document.getElementById("evaluateForm");
            // var formData = new FormData(rejectionForm);
            var actionUrl = rejectionForm.action;

            fetch(actionUrl, {
                method: rejectionForm.method,
                // body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    toastr.success('Evaluation sent to RM successfully. Redirecting...');

                    // Delay redirect for 2 seconds
                    setTimeout(function() {
                        window.location.href = '@Url.Action("MyPendingPCECases", "PCEEvaluation")';
                    }, 1000);
                } else {
                    toastr.error('Error sending the Evaluation: ' + data.error);
                }
            })
            .catch(error => {
                toastr.error('Error sending the Evaluation: ' + error);
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var statusBadge = document.getElementById("status-badge");
            var status = "Status";

            function updateButtons(status) {
                var updateBtn = document.getElementById("update-btn");
                var deteleBtn = document.getElementById("delete-btn");
                var rejectBtn = document.getElementById("reject-btn");
                var evaluateBtn = document.getElementById("evaluate-btn");

                switch (status) {
                    case "Evaluated":
                        updateBtn.style.display = "inline-block";
                        deteleBtn.style.display = "none";
                        rejectBtn.style.display = "none";
                        evaluateBtn.style.display = "inline-block";
                        break;
                    case "Pending":
                        updateBtn.style.display = "inline-block";
                        deteleBtn.style.display = "inline-block";
                        rejectBtn.style.display = "inline-block";
                        evaluateBtn.style.display = "none";
                        break;
                    case "Reevaluated":
                        updateBtn.style.display = "inline-block";
                        deteleBtn.style.display = "none";
                        rejectBtn.style.display = "none";
                        evaluateBtn.style.display = "inline-block";
                        break;
                    case "Rejected":
                        updateBtn.style.display = "inline-block";
                        deteleBtn.style.display = "inline-block";
                        rejectBtn.style.display = "none";
                        evaluateBtn.style.display = "none";
                        break;
                    default:
                        updateBtn.style.display = "none";
                        deteleBtn.style.display = "inline-block";
                        rejectBtn.style.display = "inline-block";
                        evaluateBtn.style.display = "none";
                        break;
                }
            }

            if (status) {
                statusBadge.classList.add(getStatusClass(status));
                updateButtons(status);
            }
        });
    </script>
}