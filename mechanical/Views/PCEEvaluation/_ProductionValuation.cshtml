@using mechanical.Models.PCE.Entities
@using mechanical.Models.Dto.UploadFileDto
@using mechanical.Models.PCE.Dto.ProductionCapacityDto
@using mechanical.Models.PCE.Dto.PCEEvaluationDto
@model mechanical.Models.PCE.Dto.ProductionCapacityDto.ReturnProductionDto

@{
    var LatestPCEEvaluation = ViewData["LatestPCEEvaluation"] as PCEEvaluationReturnDto;
    var Reestimation = ViewData["Reestimation"] as ProductionCapacityReestimation;
    var CurrentUser = ViewData["CurrentUser"] as CreateUser;

    ViewData["Title"] = ViewBag.Title as string;   
    var myPCE = ViewData["PCE"] as ReturnProductionDto;
}

<section class="content">
    <section class="col-xl-12 connectedSortable">
         
        @{
            if (Reestimation != null)
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-warning">Reason for Reestimation</h3>
                    </div>
                    <div class="card-body">                              
                        <div>
                            @Reestimation.Reason
                        </div>                         
                    </div>
                </div>
            }
        }    

        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info center">General Information</h3>
            </div>
            <div class="card-body">                    
                <div class="row">
                    <div class="container col-12">
                        <div class="row" style="margin-top:1.25rem;">
                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label>Manufacturing Catagory:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.Category</div>
                                </div>
                            </div>

                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label> Manufacture Year:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.ManufactureYear</div>
                                </div>
                            </div>
                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label>Region:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.Region</div>
                                </div>
                            </div>

                        </div>
                        <div class="row" style="margin-top:1.25rem;">
                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label>Model Number:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.ModelNo</div>
                                </div>
                            </div>
                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label>Production Type:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.ProductionType</div>
                                </div>
                            </div>
                            <div class="row col-lg-4">
                                <div class="col-lg-6">
                                    <label>Bussiness Licence:</label>
                                </div>
                                <div class="col-lg-6">
                                    <div>@Model.ProductionBussinessLicence</div>
                                </div>
                            </div>

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-success text-center">PCE Valuation Result</h3>
            </div>
            <div class="card-body">
                @{
                    if (LatestPCEEvaluation != null)
                    {
                        <div class="row">
                            @await Html.PartialAsync("Partial/_EvaluationDetailPartial", LatestPCEEvaluation)
                        </div>  
                        @if (Model.EvaluatorUserID == CurrentUser.Id && Model.CurrentStage == "Maker Officer")
                        {
                            if (myPCE.CurrentStatus == "New" || myPCE.CurrentStatus == "Pending" || myPCE.CurrentStatus == "Reestimate")
                            {
                                <div class="row mt-3 mb-2">
                                    <div class="col-12 d-flex justify-content-around">
                                        <div id="update-btn-container">
                                            <a href="@Url.Action("Update", "PCEEvaluation", new { Id = @LatestPCEEvaluation.Id })" id="update-btn" class="btn btn-md btn-info">
                                                <i class="fas fa-pen mr-2"></i> Update
                                            </a>
                                        </div>
                                        <div id="delete-btn-container">
                                            <a href="@Url.Action("Delete", "PCEEvaluation", new { Id = @LatestPCEEvaluation.Id })" id="delete-btn" class="btn btn-md btn-dark">
                                                <i class="fas fa-trash-alt mr-2"></i> Delete
                                            </a>
                                        </div>
                                        <div id="reject-btn-container">
                                            <button id="reject-btn" type="button" class="btn btn-md btn-danger" data-toggle="modal" data-target="#rejectionModal1">
                                                <i class="fas fa-undo mr-2"></i> Return
                                            </button>
                                        </div>
                                        <div id="evaluate-btn-container">
                                            <a href="@Url.Action("Evaluate", "PCEEvaluation", new { Id = @LatestPCEEvaluation.Id })" id="evaluate-btn" class="btn btn-md btn-success">
                                                <i class="fas fa-paper-plane mr-2"></i> Complete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        } 
                    }
                    else
                    {
                        <div>
                            <h6 class="text-center">Not evaluated yet</h6>
                        </div>
                    }
                }
                 
            </div>          
        </div>   
    </section>           
</section>
  
@section Scripts {

    <Script>    
        handleButtonClick(
            "evaluate-btn",
            "Are you sure you want to send this evaluation?",
            "Evaluation sent to RM successfully. Redirecting...",
            '@Url.Action("MyPCEs", "PCEEvaluation", new { Status = "Completed" })'
        );

        handleButtonClick(
            "delete-btn",
            "Are you sure you want to delete this evaluation?",
            "Evaluation is deleted successfully. Redirecting...",
            '@Url.Action("Create", "PCEEvaluation")?Id=@myPCE.Id'
        );

    </script> 
}
