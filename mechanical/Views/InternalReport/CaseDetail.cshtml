<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4>Internal Report Generate</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Report Generate</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="fromDate">From Date</label>
                            <input type="date" id="fromDate" class="form-control custom-date" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="toDate">To Date</label>
                            <input type="date" id="toDate" class="form-control custom-date" />
                        </div>
                    </div>
                    <div class="col-md-6 align-self-end">
                        <button id="filterBtn" class="btn custom-btn" style="border:none;">Filter</button>
                        <button id="resetBtn" class="btn custom-btn" style="border:none;">Reset</button>
                        <button id="detailReportBtn" class="btn custom-btn" style="border:none;">Detail Report</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h4 id="reportTitle" class="text-center mb-3">Case Level Report</h4>

                <div class="table-responsive" style="overflow-x: auto;">
                    <table id="MyNewCase" class="table table-bordered table-striped" style="width: 100%;">
                        <thead>
                            <tr>
                                <th class="no-export">Action</th> <!-- New column -->
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .custom-btn {
        background-color: #6f42c1; /* Pink */
        color: #ffffff; /* Black text */
        margin-right: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s;
    }

        .custom-btn:hover {
            background-color: #ffd700; /* Golden on hover */
            color: #000000;
        }

        .custom-btn:active {
            background-color: #e6c200; /* Darker golden on click */
        }

    #reportTitle {
        color: #6f42c1; /* Matching your theme */
        font-weight: bold;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 7px;
        border-left: 5px solid #6f42c1;
    }

    .custom-date {
        border: 1px solid #000000; /* Black border */
        background-color: #fff; /* White background */
        color: #000000; /* Black text */
        padding: 8px;
    }

        .custom-date:focus {
            border-color: #ffd700; /* Golden border on focus */
            outline: none;
            box-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
        }
    /* Action column styling */
    .nav-link-btn {
        color: #6f42c1 !important;
        background: none !important;
        border: none;
        padding: 0.25rem 0.5rem;
        cursor: pointer;
    }

        .nav-link-btn:hover {
            color: white !important;
            background-color: #6f42c1 !important;
            text-decoration: none;
        }



    /* Make sure action column stays visible */
    th.no-export {
        display: table-cell !important;
    }

    label {
        color: #000000; /* Black text for labels */
    }
    /* Ensure the last column (Setting) is always visible */
    #MyNewCase th:last-child,
    #MyNewCase td:last-child {
        background-color: rgba(111, 66, 193, 0.25);
        position: relative;
        z-index: 1;
    }

    /* Adjust DataTables scrolling behavior */
    .dataTables_scrollBody {
        overflow-x: auto !important;
    }

    /* Make sure the Setting column doesn't get hidden */
    .DTFC_Cloned th:last-child,
    .DTFC_Cloned td:last-child {
        display: none !important; /* Disable fixed column for Setting */
    }

    #MyNewCase th:last-child,
    #MyNewCase td:last-child {
        background-color: rgba(111, 66, 193, 0.25);
        position: sticky;
        right: 0;
        z-index: 1;
        box-shadow: -2px 0 5px rgba(0,0,0,0.1);
    }



    /* Main table container */
    .table-responsive {
        position: relative;
        overflow: auto;
        width: 100%;
    }

    /* DataTables specific styling */
    #MyNewCase {
        width: 100% !important;
    }


    /* Adjust DataTables scroll containers */
    .dataTables_scroll {
        position: relative;
    }

    .dataTables_scrollHead {
        position: relative;
        overflow: hidden !important;
    }

    .dataTables_scrollBody {
        overflow-x: auto !important;
        position: relative;
    }

    /* Remove any fixed column cloning */
    .DTFC_Cloned {
        display: none !important;
    }

    /* Button styling */
    .nav-link-btn {
        color: #6f42c1 !important;
        background: none !important;
        border: none;
        padding: 0.25rem 0.5rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .nav-link-btn:hover {
            color: white !important;
            background-color: #6f42c1 !important;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Partial/_CasesReportDatatableScriptsPartial");
        await Html.RenderPartialAsync("PCEScriptPartial/Partial/_CommonLibrariesScriptPartial");
    }
}
