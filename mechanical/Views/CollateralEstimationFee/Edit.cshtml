@model mechanical.Models.PCE.Dto.CollateralEstimationFeeDto.CollateralEstimationFeeDto
@using mechanical.Models.PCE.Enum.Collateral

@{
    ViewData["Title"] = "Edit Collateral Estimation Fee";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6 col-xl-6 offset-xl-1">
                <h4 class="m-0">Edit Collateral Estimation Fee</h4>
            </div>
            <div class="col-sm-6 col-xl-4">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "CollateralEstimationFee")">Collateral Estimation Fees</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <section class="col-xl-10 offset-xl-1 connectedSortable">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <img src="~/img/assignment_add_FILL0_wght300_GRAD200_opsz20.svg" class="nav-icon" alt="Custom Icon">
                    Edit Collateral Estimation Fee
                </h3>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PCEEId" />
                    <input type="hidden" asp-for="CreatedBy" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="row">
                        <div class="form-group col-xl-6">
                            <label asp-for="CollateralClass" class="control-label">Collateral Class <i class="text-danger">*</i></label>
                            <select asp-for="CollateralClass" class="form-control" asp-items="Html.GetEnumSelectList<CollateralClass>()"></select>
                            <span asp-validation-for="CollateralClass" class="text-danger"></span>
                        </div>
                        <div class="form-group col-xl-6">
                            <label asp-for="CollateralCategory" class="control-label">Collateral Category <i class="text-danger">*</i></label>
                            <select asp-for="CollateralCategory" class="form-control" asp-items="Html.GetEnumSelectList<CollateralCategory>()"></select>
                            <span asp-validation-for="CollateralCategory" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xl-6">
                            <label asp-for="UnitOfMeasure" class="control-label">Unit of Measure <i class="text-danger">*</i></label>
                            <select asp-for="UnitOfMeasure" class="form-control" asp-items="Html.GetEnumSelectList<UnitOfMeasure>()"></select>
                            <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                        </div>
                        <div class="form-group col-xl-6">
                            <label asp-for="EstimationFeePerUnit" class="control-label">Estimation Fee Per Unit <i class="text-danger">*</i></label>
                            <input asp-for="EstimationFeePerUnit" class="form-control" id="estimationFeePerUnit" />
                            <span asp-validation-for="EstimationFeePerUnit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xl-6">
                            <label asp-for="Quantity" class="control-label">Quantity <i class="text-danger">*</i></label>
                            <input asp-for="Quantity" class="form-control" id="quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-xl-6">
                            <label asp-for="TotalFee" class="control-label">Total Fee</label>
                            <input asp-for="TotalFee" class="form-control" readonly id="totalFee" />
                            <span asp-validation-for="TotalFee" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xl-12">
                            <label asp-for="Status" class="control-label">Status</label>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FeeStatus>()" id="status"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row" id="rejectionReasonRow" style="display: none;">
                        <div class="form-group col-xl-12">
                            <label asp-for="RejectionReason" class="control-label">Rejection Reason</label>
                            <input asp-for="RejectionReason" class="form-control" />
                            <span asp-validation-for="RejectionReason" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <button type="submit" class="col-xl-4 btn bg-purple">Save</button>
                        <a asp-action="Index" class="col-xl-4 btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("ScriptPartial/_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function() {
            function calculateTotalFee() {
                var feePerUnit = parseFloat($('#estimationFeePerUnit').val()) || 0;
                var quantity = parseInt($('#quantity').val()) || 0;
                var totalFee = feePerUnit * quantity;
                $('#totalFee').val(totalFee.toFixed(2));
            }

            $('#estimationFeePerUnit, #quantity').on('input', function() {
                calculateTotalFee();
            });
            
            $("#status").change(function () {
                if ($(this).val() ===  '@((int)FeeStatus.Rejected)') {
                    $("#rejectionReasonRow").show();
                } else {
                    $("#rejectionReasonRow").hide();
                }
            });
        });
    </script>
}
