@model mechanical.Models.Dto.TaskManagmentDto.TaskManagmentReturnDto

<dl class="row">
    <dt class="col-sm-4">Case Number</dt>
    <dd class="col-sm-8">@Model.Case?.CaseNo</dd>

    <dt class="col-sm-4">Task Name</dt>
    <dd class="col-sm-8">@Model.TaskName</dd>

    <dt class="col-sm-4">Assigned To</dt>
    <dd class="col-sm-8">@Model.Assigned?.Name</dd>

    <dt class="col-sm-4">Assigned By</dt>
    <dd class="col-sm-8">@Model.CaseOrginator?.Name</dd>
    
    <dt class="col-sm-4">Assignment Date</dt>
    <dd class="col-sm-8">@Model.AssignedDate</dd>

    <dt class="col-sm-4">Priority</dt>
    <dd class="col-sm-8">@Model.PriorityType</dd>

    <dt class="col-sm-4">Deadline</dt>
    <dd class="col-sm-8">@Model.Deadline.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-4">Status</dt>
    <dd class="col-sm-8">@Model.TaskStatus</dd>

    @if (Model.UpdatedDate != null){
        <dt class="col-sm-4">Updated Date</dt>
        <dd class="col-sm-8">@Model?.UpdatedDate</dd>
    }
    @if (Model.CompletionDate != null && Model.TaskStatus == "Completed"){
        <dt class="col-sm-4">Completion Date</dt>
        <dd class="col-sm-8">@Model?.CompletionDate</dd>
    }
    <dt class="col-sm-4">State</dt>
    <dd class="col-sm-8">
        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">@(Model.IsActive ? "Active" : "Inactive")</span>
    </dd>

    <dt class="col-sm-4">Reason</dt>
    <dd class="col-sm-8">@Model.SharingReason</dd>
</dl>

<a href='@Url.Action("Detail", "Case")?Id=@Model?.CaseId&CaseType=Shared'>Go to Case / See Case Detail</a>

