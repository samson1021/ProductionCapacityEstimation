@using mechanical.Models.Dto.UserDto
@using mechanical.Models.PCE.Dto.PCECaseDto
@* @using mechanical.Models.PCE.Enum.ProductionCapacity *@

@{
    var myPCECase = ViewData["PCECase"] as PCECaseReturntDto;
    var currentUser = ViewData["CurrentUser"] as ReturnUserDto;
    var status = ViewBag.Status as string;

    var assiName = "";

    if (currentUser.Role.Name == "Relation Manager")
    {
        
    }
    else if (currentUser.Role.Name == "Maker Manager")
    {
        assiName = "PCEAssignTeamleader";
    }
    else if (currentUser.Role.Name == "Maker TeamLeader")
    {
        assiName = "PCEAssignMakerOfficer";
    }
    else if (currentUser.Role.Name == "District Valuation Manager")
    {
        assiName = "PCEAssignMakerOfficer";
    }
}

<div class="card">
    <div class="card-header">
        <div class="col-12">
            <div class="row">                
                @{
                    if (status == "New" && currentUser.Role.Name == "Relation Manager")
                    {                     
                        <div class="col-12 col-sm-6" style="margin-top:1rem;">
                            <div class="btn-group">
                                <button id="addProductionButton" type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#addProductionModal">
                                    <i class="fas fa-plus-circle"></i> Manufacturing PCE Request
                                </button>
                                <button id="addPlantButton" type="button" class="btn btn-sm btn-outline-primary ms-1" data-toggle="modal" data-target="#addPlantModal">
                                    <i class="fas fa-plus-circle"></i> Plant PCE Request
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-primary ms-1" data-toggle="modal">
                                    <i class="fas fa-plus-circle"></i> Add any other
                                </button>
                                <a class="btn btn-sm btn-outline-primary ms-1" href="@Url.Action("Index", "PCECaseTimeLine", new { PCECaseId = myPCECase.Id })">
                                    <i class="nav-icon fas fa-sitemap"></i>
                                </a>
                            </div>
                        </div> 
                    }               
                }
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <table id="Productions" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        @if (status == "New" && currentUser.Role.Name != "Maker Officer")
                        {
                            <th><input type="checkbox" class="form-check bg-purple" id="selectAllCheckbox"></th>  
                        }        
                        <th>Property Owner</th>
                        <th>Role</th>
                        <th>Production Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table> 
        </div>
        @{
            if (status == "New")
            {
                if (currentUser.Role.Name == "Relation Manager")
                {                
                    <div class="row">
                        <div class="row">
                            <button type="submit" id="assignButton" class="col-xl-2  btn btn-sm  bg-purple">Send for Estimation<i class="fas fa-paper-plane"></i></button>
                        </div>
                    </div>
                }
                else if ((currentUser.Role.Name == "Maker Manager") || (currentUser.Role.Name == "Maker TeamLeader") || (currentUser.Role.Name == "District Valuation Manager"))
                {
                    <div class="row">
                        <div class="col-xl-2 col-lg-4 col-sm-6">
                            <button id="assignButton" class="col-12 btn btn-sm bg-purple">Assign</button>
                        </div>
                    </div>                 
                }
            }
        }
    </div>
  
</div>

@{
    if (currentUser.Role.Name == "Relation Manager")
    {
        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">Are you sure you want to delete this production?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="deleteItem">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="SendForEvaluationModal" tabindex="-1" role="dialog" aria-labelledby="SendForEvaluationModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assignModalLabel">Send For Valuation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("SendForValuation", "PCECase", FormMethod.Post, new { id = "assignForm" }))
                        {
                            <input type="hidden" id="selectedPCEIds" name="selectedPCEIds">
                            <div class="form-group">
                                <label for="CenterDropdown">Select Valuation Center:</label>
                                <select class="form-control" id="CenterDropdown" name="CenterId">
                                </select>
                            </div>
                            <div class="row col-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-sm bg-purple col-6  ms-1">Assign</button>
                                    <button type="button" class="btn btn-sm btn-secondary col-6  ms-1" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    
    }
    else if ((currentUser.Role.Name == "Maker Manager") || (currentUser.Role.Name == "Maker TeamLeader") || (currentUser.Role.Name == "District Valuation Manager"))
    {
        <div class="modal fade" id="assignModal" tabindex="-1" role="dialog" aria-labelledby="assignModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assignModalLabel">Assign Case</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm(assiName, "PCECaseAssignment", FormMethod.Post, new { id = "assignForm" }))
                        {
                            <input type="hidden" id="SelectedPCEIds" name="SelectedPCEIds">
                            <div class="form-group">
                                <label for="employeeDropdown">Select Employee:</label>
                                <select class="form-control" id="employeeDropdown" name="employeeId">
                                </select>
                            </div>
                            <div class="row col-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-sm bg-purple col-6  ms-1">Assign</button>
                                    <button type="button" class="btn btn-sm btn-secondary col-6  ms-1" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
