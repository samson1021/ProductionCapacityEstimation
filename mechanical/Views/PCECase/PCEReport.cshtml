                                        <td class="text-wrap">@productionFile.ContentType</td>
                                        <td class="text-wrap">
                                            <a class="text-purple" href="@Url.Action("ViewFile","UploadFile" ,new { Id = productionFile.Id })" target="_blank">View <i class="fas fas-solid fa-eye"></i></a> |
