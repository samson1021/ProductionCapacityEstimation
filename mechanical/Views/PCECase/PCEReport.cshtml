                </table>

            </div>

            <div class="pdf-stamp">
                <img src="@Url.Content("~/img/stamp.png")" alt="Official Stamp" style="max-width: 150px; height: auto; opacity: 0.9;" />
            </div>
            @* <div class="pdf-page-number"></div> *@
