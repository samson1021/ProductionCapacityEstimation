@using mechanical.Models.PCE.Dto.PCECaseDto
@using mechanical.Models.PCE.Entities
@using mechanical.Models.Dto.UploadFileDto

@{
    var PCECase = ViewData["PCECase"] as PCECase;
    var productions = ViewData["Productions"] as List<ProductionCapacity>;
    var PCEEvaluations = ViewData["PCEEvaluations"] as List<PCEEvaluation>;
    var evaluatorReport = ViewData["EvaluatorReport"] as EvaluatorReportDto;
    var Signiture = ViewData["signiture"] as CreateUser;
    var productionLines = ViewData["ProductionLines"] as List<ProductionLine>;
    var productionFiles = ViewData["ProductionFiles"] as IEnumerable<ReturnFileDto>;
    var customerinfo = ViewData["customerinfo"];

    var evaluatorName = evaluatorReport?.EvaluatorName;
    var createdAt = evaluatorReport?.CreatedAt;
    var stampImagePath = Url.Content("~/img/stamp.png");
}
<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 12pt;
        line-height: 1.5;
        position: relative;
    }

    .content {
        max-width: 300mm;
        margin: 0 auto;
        text-align: justify;
    }

    .underline {
        border-bottom: 1px solid #000;
        display: inline-block;
        min-width: 50px;
        padding-bottom: 2px;
    }

    .content-section {
        padding: 2mm 10mm;
    }

    .btn-purple {
        background-color: #6f42c1;
        color: white;
        border: 1px solid #6f42c1;
    }

    .btn-purple:hover {
        background-color: #5a36a8;
        color: white;
    }


    .pdf-stamp {
        display: none !important
    }
    /* Print-specific styles */
    @@media print {
        footer, .printbtn, .downloadbtn, #requieddoc {
            display: none !important;
        }

        .approvedby, .pdf-stamp {
            display: block !important;
        }

        @@page {
            size: auto;
            margin: 20mm 20mm 30mm 20mm;
        }
        /* Proper page numbering for print */
        body {
            counter-reset: page;
        }

        .pdf-page::after {
            content: "Page " counter(page);
            counter-increment: page;
            position: absolute;
            bottom: 10mm;
            right: 20mm;
            font-size: 10pt;
        }

        body::after {
            content: "Page " counter(page);
            position: fixed;
            bottom: 10mm;
            right: 20mm;
            font-size: 10pt;
        }


        .page-break {
            page-break-before: always;
        }

        h5 {
            page-break-after: avoid;
        }

        label, p, span {
            page-break-inside: avoid !important;
        }
    }

    /* For PDF generation */
    .pdf-page {
        position: relative;
        margin-bottom: 30mm;
    }

    .pdf-stamp {
        position: absolute;
        bottom: 10mm;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 1000;
    }

    .pdf-page-number {
        position: absolute;
        bottom: 5mm;
        right: 20mm;
        font-size: 10pt;
    }

    .table-responsive {
        overflow-x: auto;
        margin-bottom: 1rem;
    }

    .table-fixed {
        table-layout: fixed;
        width: 100%;
        word-wrap: break-word;
    }

    .table-borderless td,
    .table-borderless th {
        border: none !important;
        padding: 8px 12px;
        vertical-align: top;
    }

    .table-border-none {
        border: none;
    }

    .text-wrap {
        white-space: normal !important;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }


    .pdf-mode {
        .pdf-stamp

    {
        display: block !important
    }

    .pdf-page {
        page-break-after: always;
        position: relative;
    }

        /* Page numbering for PDF */
        .pdf-page::after {
            content: "Page " counter(page);
            counter-increment: page;
            position: absolute;
            bottom: 10mm;
            right: 20mm;
            font-size: 10pt;
        }

    }
</style>

