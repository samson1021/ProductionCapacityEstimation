        <button id="print-btn" class="btn btn-purple printbtn mr-2">
            <i class="fas fa-print"></i> Print
        </button>
        <button id="download-btn" class="btn btn-purple downloadbtn">
            <i class="fas fa-file-pdf"></i> Download PDF
