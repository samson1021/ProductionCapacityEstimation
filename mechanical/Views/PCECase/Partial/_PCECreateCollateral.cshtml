<div class="modal fade" id="EstimatePlaneCollateralModal" tabindex="-1" role="dialog" aria-labelledby="addCollateralModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCollateralModalLabel">   <img src="~/img/assignment_add_FILL0_wght300_GRAD200_opsz20.svg" class="nav-icon" alt="Custom Icon"> Add Plant Production Capacity Estimation Collateral</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @* @using (Html.BeginForm("Create", "PlantCapacityEstimation", FormMethod.Post, enctype="multipart/form-data", new { id = "EstimatePlaneCollateralForm" })) *@
            @using (Html.BeginForm("Create", "PlantCapacityEstimation", FormMethod.Post, new { id = "EstimatePlaneCollateralForm", enctype = "multipart/form-data" }))
            {
                <div class="modal-body" style="padding-top:0px;">
                    <div class="card-body">
                        <input asp-for="CaseId" value="@myCase.Id" type="hidden" id="CaseId" />
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="NamePlant">Name of Plant<i class="text-danger">*</i></label>
                                <input asp-for="NamePlant" type="text" class="form-control form-control-sm" id="PropertyOwner" placeholder="Name of Plant" required>
                                <span id="PropertyOwner-error" asp-validation-for="NamePlant" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="OwnerOfPlant">Owner of Plant </label>
                                <input asp-for="OwnerOfPlant" type="datetime" class="form-control form-control-sm" id="OwnerOfMachinery" placeholder="Owner of Plant *">
                                <span id="OwnerOfMachinery-error" asp-validation-for="OwnerOfPlant" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="border my-2 p-2 position-relative shadow" style="border-color: darkgray !important;border-radius:1px">
                            <div class="bg-white px-2 position-absolute top-0 start-50 translate-middle"><h6>General Information of the Plant </h6></div>

                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label asp-for="TradeLicenseNo">Trade License No <i class="text-danger">*</i></label>
                                    <input asp-for="TradeLicenseNo" type="text" class="form-control form-control-sm" placeholder="Enter Trade License No" id="MachineName" required>
                                    <span asp-validation-for="TradeLicenseNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="LHCNo">LHCNo <i class="text-danger">*</i></label>
                                    <input asp-for="LHCNo" type="text" class="form-control form-control-sm" id="Purpose" placeholder="Please Enter LHCNo" required>
                                    <span asp-validation-for="LHCNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="OwnerNameLHC">OwnerNameLHC </label>
                                    <input asp-for="OwnerNameLHC" type="text" class="form-control form-control-sm" id="ModelNo" placeholder="Enter OwnerNameLHC ">
                                    <span id="ModelNo-error" asp-validation-for="OwnerNameLHC" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-lg-3">
                                    <label asp-for="YearOfManifacturing">Manufactuing Year</label>
                                    <input asp-for="YearOfManifacturing" type="number" min="1900" max="2024" class="form-control form-control-sm" id="ManufactureYear" placeholder="1900">
                                    <span asp-validation-for="YearOfManifacturing" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PurposeOfPCE">Purpose Of PCE</label>
                                    <input asp-for="PurposeOfPCE" type="text" class="form-control form-control-sm" id="InvoiceNo" placeholder="Enter Purpose Of PCE">
                                    <span id="InvoiceNo-error" asp-validation-for="PurposeOfPCE" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="ObsolescenceStatus">Obsolescence Status</label>
                                    <select asp-for="ObsolescenceStatus" class="form-control form-control-sm" required>
                                        <option value="" disabled selected>Select Obsolescence Status</option>
                                        <option value="Good">Good/Functional</option>
                                        <option value="Obsolete">Obsolete</option>
                                        <option value="PartiallyObsolete">Partially Obsolete</option>
                                        <option value="Outdated">Outdated</option>
                                        <option value="EndOfLife">End-of-Life</option>
                                    </select>
                                    <span id="SerialNo-error" asp-validation-for="ObsolescenceStatus" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantDepreciationRate">Plant Depreciation Rate</label>
                                    <input asp-for="PlantDepreciationRate" type="number" class="form-control form-control-sm" id="SerialNo" placeholder="Plant Depreciation Rate">
                                    <span id="SerialNo-error" asp-validation-for="PlantDepreciationRate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="border my-2 p-2 position-relative shadow mt-4" style="border-color: darkgray !important;border-radius:1px">
                            <div class="bg-white px-2 position-absolute top-0 start-50 translate-middle"><h6>Physical Address of the Plant </h6></div>
                            <div class="row">
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantRegion">Region<i class="text-danger">*</i></label>
                                    <select asp-for="PlantRegion" class="form-control form-control-sm" id="Region" onchange="handleRegionChange(this)" required>
                                        <option value="">Select Region</option>
                                        <option value="Addis Ababa">Addis Ababa</option>
                                        <option value="Afar">Afar</option>
                                        <option value="Amhara">Amhara</option>
                                        <option value="Benshangul">Benshangul</option>
                                        <option value="Central Ethiopia">Central Ethiopia</option>
                                        <option value="Diredawa">Diredawa</option>
                                        <option value="Gambella">Gambella</option>
                                        <option value="Harrari">Harrari</option>
                                        <option value="Oromia">Oromia</option>
                                        <option value="Sidama">Sidama</option>
                                        <option value="Somalia">Somalia</option>
                                        <option value="South western Ethiopia">South western Ethiopia</option>
                                        <option value="Southern Ethiopia">Southern Ethiopia</option>
                                        <option value="Tigray">Tigray</option>
                                        <option value="Others">Others, please specify</option>
                                    </select>
                                    <input type="text" class="form-control form-control-sm mt-2" id="OtherRegion" name="OtherRegion" style="display: none;">
                                    <span asp-validation-for="PlantRegion" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantZone">Zone</label>
                                    <input asp-for="PlantZone" type="text" class="form-control form-control-sm" id="Zone" placeholder="Enter Zone" oninput="validateZoneInput(this)">
                                    <span id="Zone-error" asp-validation-for="PlantZone" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantCity">City</label>
                                    <input asp-for="PlantCity" type="text" class="form-control form-control-sm" id="City" placeholder="Enter City" oninput="validateCityInput(this)">
                                    <span id="City-error" asp-validation-for="PlantCity" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantSubCity">Sub-City</label>
                                    <input asp-for="PlantSubCity" type="text" class="form-control form-control-sm" id="SubCity" placeholder="Enter Sub City" oninput="validateSubCityInput(this)">
                                    <span id="SubCity-error" asp-validation-for="PlantSubCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">

                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantWereda">Wereda</label>
                                    <input asp-for="PlantWereda" type="text" class="form-control form-control-sm" id="Wereda" placeholder="Enter Wereda" oninput="validateWeredaInput(this)">
                                    <span id="Wereda-error" asp-validation-for="PlantWereda" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="PlantKebele">Kebele</label>
                                    <input asp-for="PlantKebele" type="text" class="form-control form-control-sm" id="Kebele" placeholder="Enter Kebele" oninput="validateKebeleInput(this)">
                                    <span id="Kebele-error" asp-validation-for="PlantKebele" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label asp-for="LHCNo">LHC Number</label>
                                    <input asp-for="LHCNo" type="text" class="form-control  form-control-sm" placeholder="Enter LHC Number" id="LHCNo">
                                    <span asp-validation-for="LHCNo" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        @* public required IFormFile CommercialInvoice { get; set; }
                    public required IFormFile customDeclaration { get; set; }
                    public required IFormFile LHC { get; set; }
                    public required IFormFile BussinessLicence { get; set; }
                    public IEnumerable<IFormFile>
                    ? OtherDocument { get; set; } *@

                        <div class="border my-2 p-2 position-relative shadow mt-4" style="border-color: darkgray !important;border-radius:1px">
                            <div class="bg-white px-2 position-absolute top-0 start-50 translate-middle"><h6>Necessary  Document of the Plant </h6></div>
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label asp-for="CommercialInvoice">Commercial Invoice</label>
                                    <input asp-for="CommercialInvoice" type="file" class="form-control form-control-sm" id="PackingList">
                                    <span asp-validation-for="CommercialInvoice" class="text-danger"></span>

                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="customDeclaration">Customs Declaration</label>
                                    <input asp-for="customDeclaration" type="file" class="form-control form-control-sm" id="PackingList">
                                    <span asp-validation-for="customDeclaration" class="text-danger"></span>

                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="LHC">LHC Doc</label>
                                    <input asp-for="LHC" type="file" class="form-control form-control-sm" id="PackingList">
                                    <span asp-validation-for="LHC" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label asp-for="BussinessLicence">Bussiness License</label>
                                    <input asp-for="BussinessLicence" type="file" class="form-control form-control-sm" id="PackingList">
                                    <span asp-validation-for="BussinessLicence" class="text-danger"></span>

                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="OtherDocument">Any Other Document</label>
                                    <input asp-for="OtherDocument" type="file" class="form-control form-control-sm" id="PackingList" multiple>
                                    <span asp-validation-for="OtherDocument" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <button type="submit" id="assignButton" class="col-xl-4  btn btn-sm bg-purple">Add</button>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="SendForEvaluationModal" tabindex="-1" role="dialog" aria-labelledby="SendForEvaluationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignModalLabel">Send For Valuation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SendForValuation", "Case", FormMethod.Post, new { id = "assignForm" }))
