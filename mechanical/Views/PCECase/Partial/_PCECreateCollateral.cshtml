@using mechanical.Models.PCE.Dto.PCECase
@model mechanical.Models.PCE.Dto.PlantCapacityEstimationDto.PlantCapacityEstimationPostDto;
@{
    var myCase = ViewData["pcecaseDtos"] as PCECaseReturntDto;


}
       
<div class="card">
    <div class="Card-header">
        <div class="col-12">
            <div class="row">
                <div class="col-12 col-sm-6" style="margin-top:1rem;">
                    <div class="btn-group">

                        <button id="addMechanicalCollateralButton" type="button" class="btn btn-sm  btn-outline-primary" data-toggle="modal" data-target="#addMechanicalCollateralModal">
                            <i class="fas fa-plus-circle"></i> Estimate Manufacturing Production Capacity
                        </button>
                        </button>
                        <button id="EstimatePlaneCollateralButton" type="button" class="btn btn-sm btn-outline-primary ms-1" data-toggle="modal" data-target="#EstimatePlaneCollateralModal">
                            <i class="fas fa-plus-circle"></i> Estimate Plant Production Capacity
                        </button>

                        <button id="addAgricultureCollateralButton" type="button" class="btn btn-sm btn-outline-primary ms-1" data-toggle="modal" data-target="#addAgricultureCollateralModal">
                            <i class="fas fa-plus-circle"></i> Add any other
                        </button>
                        <a class="btn btn-sm btn-outline-primary  ms-1" href="@Url.Action("Index", "CaseTimeLine", new { CaseId = "88" })">
                            <i class="nav-icon fas fa-sitemap"></i>
                        </a>
                    </div>
                </div>
                <div class="col-12 col-sm-4">
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <table id="caseCollaterals" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th><input type="checkbox" class="form-check bg-purple" id="selectAllCheckbox"></th>
                    <th>Property Owner</th>
                    <th>Role</th>
                    <th>Production Catagory</th>
                    <th>Action</th>
                </tr>
            </thead>

        </table>
        <div class="row">
            <input asp-for="CaseId" value=@myCase.Id type="hidden" id="CaseId" />
            <div class="row">
                <button type="submit" id="assignButton" class="col-xl-2  btn btn-sm  bg-purple">send for evaluation  <i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
</div>
