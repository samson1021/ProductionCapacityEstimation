                                    <span asp-validation-for="LHC" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label asp-for="BussinessLicence">Bussiness License Document</label>
                                    <input asp-for="BussinessLicence" type="file" class="form-control form-control-sm" id="PackingList">
                                    <span asp-validation-for="BussinessLicence" class="text-danger"></span>

                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="OtherDocument">Other supporting Document</label>
                                    <input asp-for="OtherDocument" type="file" class="form-control form-control-sm" id="PackingList" multiple>
                                    <span asp-validation-for="OtherDocument" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                        <div class="row">
