                                <input asp-for="PlantName" type="text" class="form-control form-control-sm" id="PropertyOwner" placeholder="Enter Plant Name" required>
                                <span id="PropertyOwner-error" asp-validation-for="PlantName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Type">Plant Type </label>
                                <input asp-for="Type" type="datetime" class="form-control form-control-sm" id="OwnerOfMachinery" placeholder="Enter Plant Type">
                                <span id="OwnerOfMachinery-error" asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>


                        
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label asp-for="ProductionBussinessLicence"> Business License Number <i class="text-danger">*</i></label>
                                <input asp-for="ProductionBussinessLicence" type="text" class="form-control form-control-sm" placeholder="Enter Business License Number" id="MachineName" required>
                                    <span asp-validation-for="ProductionBussinessLicence" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="LHCNumber">LHC Number: <i class="text-danger">*</i></label>
