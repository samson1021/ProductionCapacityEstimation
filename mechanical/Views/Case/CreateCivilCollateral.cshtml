            errorMessage = "This field is required.";
        } else if (!alphanumericRegex.test(input)) {
            errorMessage = "Only alphanumeric characters are allowed.";
        }
        if (errorMessage) {
            document.getElementById(inputId).setCustomValidity(errorMessage);
