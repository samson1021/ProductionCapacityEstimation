    function validateInputMac(inputId, errorId, isRequired) {
        var input = document.getElementById(inputId).value;
        var alphanumericRegex = /^[a-zA-Z0-9\s]+$/;
        var errorMessage = "";

        // Check if the field is required and empty
        if (isRequired && input.trim() === "") {
